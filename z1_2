class Main {
    
    
    public static void z1_2() {
        int number = 42;
        
        int a = number / 10; // 2
        
        int b = number % 10; // 1
        
        int sum = a + b;
        
        int ab = a * b;                      
        System.out.print("Sum = " + sum + ", Product = " + ab);   
    }
   
    public static void main(String[] args) 
    {
        z1_2();
    }
}
